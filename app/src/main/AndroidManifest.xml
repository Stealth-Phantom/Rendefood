<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eng.asu.rendefood">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Rendefood">
        <activity android:name=".ui.AddReviewActivity" />

        <activity android:name=".ui.CurrentReservationsActivity" />
        <activity android:name=".ui.EditInfoActivity" />
        <activity android:name=".ui.ProfileActivity" />
        <activity android:name=".ui.HistoryActivity" />
        <activity android:name=".ui.ReservationInfoActivity" />
        <activity android:name=".ui.ReservationActivity" />
        <activity android:name=".ui.ReviewActivity" />
        <activity android:name=".ui.RestaurantActivity" />
        <activity android:name=".ui.UserRegisterationActivity" />
        <activity android:name=".ui.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.MainActivity" />
        <receiver
            android:name=".Model.AlarmReceiver"
            android:enabled="true"
            android:exported="true"></receiver>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>